@page "{restaurantId:int}"
@model Hemsida.Pages.Restaurants.DetailModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detail";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers


<h2>@Model.Restaurant.Name</h2>
<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

<a asp-page="./List" class="btn btn-success">All Restaurants</a>