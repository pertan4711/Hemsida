@page
@model Hemsida.Pages.Restaurants.ListModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Restauranger";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<h1>Restaurants</h1>
Scott Allens exempel "Restaurants" i hans kurs "ASP.NET Core Fundamentals" på Pluralsight.
<br />
Funderar lite grann på skillnaden mellan asp-page och MVC.
<p />

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

@section footer {
    <div>@Model.Message binder till modellen som binder till en sträng i config</div>
}